@model TurismoMexicoMVC.Models.ViewModels.NuevaCategoria
@{
    ViewBag.Title = "Nueva categoria";
}

<h4 class="mt-5 text-secondary fw-semibold">@ViewBag.Title</h4>

@using (Html.BeginForm("Nueva_Categoria", "Categoria", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.nombre, new { @class = "fw-bolder mt-3" })
                @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control mt-2", required = true })
                @Html.ValidationMessageFor(d => d.nombre, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.descripcion, new { @class = "fw-bolder mt-3" })
                @Html.TextBoxFor(d => d.descripcion, "", new { @class = "form-control mt-2" })

            </div>
            <div style="text-align:left;">
                <input value="Guardar" class="btn btn-secondary mt-3" type="submit" />
            </div>
        </div>
    </div>
}

