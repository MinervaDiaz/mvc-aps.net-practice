@model TurismoMexicoMVC.Models.ViewModels.NuevaCategoria
@{
    ViewBag.Title = "Nueva categoria";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nueva_Categoria", "Categoria", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.nombre, new { @class = "fw-bolder" })
                @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.nombre, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.descripcion, new { @class = "fw-bolder" })
                @Html.TextBoxFor(d => d.descripcion, "", new { @class = "form-control" })
                
            </div>
            <div style="text-align:right;">
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>
    </div>
}

