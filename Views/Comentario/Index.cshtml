@* ponemos model en minúscula porque es un helper *@
@model List<TurismoMexicoMVC.Models.ViewModels.ComentariosLista>
@{
    ViewBag.Title = "Lista de comentarios";
}

<h3 class="text-center mb-4">@ViewBag.Title</h3>

<div class="row">
    <div class="col-xs-2" style="text-align:right;">
        <a href="~/Comentario/Nuevo_Comentario" class="btn btn-primary mb-3">Nuevo Comentario</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered text-center">
            <tr class="bg-warning">
                <th>Código</th>
                <th>Lugar</th>
                <th>Usuario</th>
                <th>Comentario</th>
                <th>Fecha</th>
                <th></th>
                <th></th>

                @foreach (var Elemento in Model)
                {
                <tr>
                    <td>@Elemento.id_comentario</td>
                    <td>@Elemento.nombre_lugar</td>
                    <td>@Elemento.nombre_usuario</td>
                    <td>@Elemento.comentario</td>
                    <td>@Elemento.fecha</td>
                    <td>
                        <a class="btn btn-warning" href="~/Comentario/Editar_Comentario/@Elemento.id_comentario"><i class="fa-solid fa-wand-magic-sparkles"></i></a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="~/Comentario/Eliminar_Comentario/@Elemento.id_comentario"><i class="fa-regular fa-trash-can"></i></a>

                    </td>
                </tr>

            }
            </table>
        </div>
    </div>

