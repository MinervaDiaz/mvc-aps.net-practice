@* ponemos model en minúscula porque es un helper *@
@model List<TurismoMexicoMVC.Models.ViewModels.ComentariosLista>
@{
    ViewBag.Title = "Lista de comentarios";
}
<div class="row mt-5 mb-2">
    <div class="col-5" style="text-align:right;">
        <h3 class="text-center text-secondary fw-semibol mb-4">@ViewBag.Title</h3>
    </div>
    <div class="col-5" style="text-align:right;">
        <a href="~/Comentario/Nuevo_Comentario" class="btn btn-success mb-3">Nuevo Comentario</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered ">
            <tr class="bg-dark">
                <th class="text-center text-white">Código</th>
                <th class="text-center text-white">Lugar</th>
                <th class="text-center text-white">Usuario</th>
                <th class="text-center text-white">Comentario</th>
                <th class="text-center text-white">Fecha</th>
                <th class="text-center text-white"></th>
                <th class="text-center text-white"></th>

                @foreach (var Elemento in Model)
                {
                <tr>
                    <td>@Elemento.id_comentario</td>
                    <td>@Elemento.nombre_lugar</td>
                    <td>@Elemento.nombre_usuario</td>
                    <td>@Elemento.comentario</td>
                    <td>@Elemento.fecha</td>
                    <td>
                        <a class="btn btn-success" href="~/Comentario/Editar_Comentario/@Elemento.id_comentario"><i class="fa-solid fa-wand-magic-sparkles"></i></a>
                    </td>
                    <td>
                        <a class="btn btn-success" href="~/Comentario/Eliminar_Comentario/@Elemento.id_comentario"><i class="fa-regular fa-trash-can"></i></a>

                    </td>
                </tr>

            }
            </table>
        </div>
    </div>

