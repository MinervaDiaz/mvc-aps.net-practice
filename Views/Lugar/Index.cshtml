@* ponemos model en minúscula porque es un helper *@
@model List<TurismoMexicoMVC.Models.ViewModels.LugaresLista>
@{
    ViewBag.Title = "Lista de lugares";
}

<div class="row mt-5 mb-2">
    <div class="col-5" style="text-align:right;">
        <h3 class="text-center text-secondary fw-semibol mb-4">@ViewBag.Title</h3>
    </div>
    <div class="col-5" style="text-align:right;">
        <a href="~/Lugar/Nuevo_Lugar" class="btn btn-info mb-3">Nuevo lugar</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <tr class="bg-dark ">
                <th class="text-center text-white">Código</th>
                <th class="text-center text-white">Nombre</th>
                <th class="text-center text-white">Descripcion</th>
                <th class="text-center text-white">Ubicacion</th>
                <th class="text-center text-white">Categoria</th>
                <th class="text-center text-white"></th>
                <th class="text-center text-white"></th>

                @foreach (var Elemento in Model)
                {
<tr>    
                    <td>@Elemento.id_lugar</td>
                    <td>@Elemento.nombre</td>
                    <td>@Elemento.descripcion</td>
                    <td>@Elemento.ubicacion</td>
                    <td>@Elemento.nombre_cat</td>
                    <td>
                        <a class="btn btn-info" href="~/Lugar/Editar_Lugar/@Elemento.id_lugar"><i class="fa-solid fa-wand-magic-sparkles"></i></a>
                        </td>
                    <td>
                        <a class="btn btn-info" href="~/Lugar/Eliminar_Lugar/@Elemento.id_lugar"><i class="fa-regular fa-trash-can"></i></a>

                    </td>
                </tr>

            }
            </table>
        </div>
    </div>

