@model TurismoMexicoMVC.Models.ViewModels.NuevoLugar
@{
    ViewBag.Title = "Nuevo lugar";
}

<h4 class="mt-5 text-secondary fw-semibold">@ViewBag.Title</h4>

@using (Html.BeginForm("Nuevo_Lugar", "Lugar", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.nombre, new { @class = "fw-bolder mt-2"})
                @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control mt-1", required = true })
                @Html.ValidationMessageFor(d => d.nombre, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.descripcion, new { @class = "fw-bolder mt-3" })
                @Html.TextBoxFor(d => d.descripcion, "", new { @class = "form-control mt-1" })
            </div>
            <div>
                @Html.LabelFor(d => d.ubicacion, new { @class = "fw-bolder mt-3" })
                @Html.TextBoxFor(d => d.ubicacion, "", new { @class = "form-control mt-1" })
            </div>
            <div>
                @Html.Label("lugar", new { @class = "fw-bolder mt-3" })
                @Html.DropDownListFor(d => d.categoria_id, new SelectList(ViewBag.ListaCategoria, "id_categoria", "nombre_cat"), new { @class = "form-control mt-1"})
            </div>
            <div style="text-align:left;">
                <input value="Guardar" class="btn btn-secondary mt-5" type="submit" />
            </div>
        </div>
    </div>
}

